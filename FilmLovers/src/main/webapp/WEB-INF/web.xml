<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>RoleFilter</filter-name>
        <filter-class>filmlovers.filter.RoleFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>RoleFilter</filter-name>
        <url-pattern>/admin/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern>/update-info</url-pattern>
        <url-pattern>/review</url-pattern>
        <url-pattern>/contribute</url-pattern>
        <url-pattern>/watchlist</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>DefaultFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>FilmController</servlet-name>
        <servlet-class>filmlovers.controllers.web.FilmController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchFilmController</servlet-name>
        <servlet-class>filmlovers.controllers.web.SearchFilmController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchCelebController</servlet-name>
        <servlet-class>filmlovers.controllers.web.SearchCelebController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoadMoreController</servlet-name>
        <servlet-class>filmlovers.controllers.web.LoadMoreController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FilmDetailController</servlet-name>
        <servlet-class>filmlovers.controllers.web.FilmDetailController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminDashboardController</servlet-name>
        <servlet-class>filmlovers.controllers.admin.AdminDashboardController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminFilmController</servlet-name>
        <servlet-class>filmlovers.controllers.admin.AdminFilmController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminLoginController</servlet-name>
        <servlet-class>filmlovers.controllers.admin.AdminLoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>filmlovers.controllers.subscriber.LoginController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AccountDetailController</servlet-name>
        <servlet-class>filmlovers.controllers.subscriber.AccountDetailController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ReviewController</servlet-name>
        <servlet-class>filmlovers.controllers.subscriber.ReviewController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>WatchlistController</servlet-name>
        <servlet-class>filmlovers.controllers.subscriber.WatchlistController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ContributionController</servlet-name>
        <servlet-class>filmlovers.controllers.subscriber.ContributionController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeniedController</servlet-name>
        <servlet-class>filmlovers.controllers.web.DeniedController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CheckContributeController</servlet-name>
        <servlet-class>filmlovers.controllers.admin.CheckContributeController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FilmController</servlet-name>
        <url-pattern>/film</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchFilmController</servlet-name>
        <url-pattern>/search/film</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchCelebController</servlet-name>
        <url-pattern>/search/celeb</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoadMoreController</servlet-name>
        <url-pattern>/search/load-more</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FilmDetailController</servlet-name>
        <url-pattern>/film-detail</url-pattern>
