    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ContributionController</servlet-name>
        <url-pattern>/contribute</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>DefaultFilter</filter-name>
        <filter-class>filmlovers.filter.DefaultFilter</filter-class>
    </filter>
    <filter>
        <filter-name>LoginFilter</filter-name>
        <filter-class>filmlovers.filter.LoginFilter</filter-class>
    </filter>
    <servlet-mapping>
        <servlet-name>DeniedController</servlet-name>
        <url-pattern>/denied</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CheckContributeController</servlet-name>
        <url-pattern>/admin/contribute-check</url-pattern>
    </servlet-mapping>
